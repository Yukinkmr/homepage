---
interface Props {
  title: string;
  description?: string;
  class?: string;
}

const { title, description, class: className } = Astro.props;
---

<section class={`mb-20 ${className || ''}`}>
  <div class="mb-12">
    <h2 class="text-5xl md:text-6xl lg:text-7xl font-bold text-gray-100 mb-4 tracking-tight">
      {title}
    </h2>
    {description && (
      <p class="text-2xl md:text-3xl text-gray-400 leading-relaxed font-light">
        {description}
      </p>
    )}
  </div>
  <slot />
</section>
