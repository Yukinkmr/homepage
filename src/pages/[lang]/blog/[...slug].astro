---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import type { Lang } from '../../../i18n/utils';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { lang: post.data.lang, slug: post.slug },
  }));
}

const { lang, slug } = Astro.params as { lang: Lang; slug: string };

const posts = await getCollection('blog');
const post = posts.find((p) => p.slug === slug && p.data.lang === lang);

if (!post) {
  return Astro.redirect(`/${lang}/blog/`);
}

const { Content } = await post.render();
---

<BaseLayout title={post.data.title} lang={lang} description={post.data.description}>
  <div class="w-full mx-auto px-6 md:px-8 lg:px-12 xl:px-16 py-12 max-w-5xl">
    <article class="prose prose-invert prose-lg max-w-none">
      <header class="mb-8">
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-gray-100 mb-4">
          {post.data.title}
        </h1>
        <div class="flex items-center space-x-4 text-sm text-gray-400 mb-4">
          <time datetime={post.data.date}>
            {new Date(post.data.date).toLocaleDateString(lang === 'ja' ? 'ja-JP' : 'en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
            })}
          </time>
          {post.data.tags.length > 0 && (
            <div class="flex flex-wrap gap-2">
              {post.data.tags.map((tag) => (
                <span class="px-2 py-1 bg-gray-700 text-gray-300 rounded text-xs">
                  {tag}
                </span>
              ))}
            </div>
          )}
        </div>
      </header>
      <div class="text-gray-300 leading-relaxed">
        <Content />
      </div>
    </article>
  </div>
</BaseLayout>

<style>
  .prose {
    @apply text-gray-300;
  }
  .prose h1,
  .prose h2,
  .prose h3,
  .prose h4 {
    @apply text-gray-100 font-bold;
  }
  .prose h2 {
    @apply text-3xl mt-8 mb-4;
  }
  .prose h3 {
    @apply text-2xl mt-6 mb-3;
  }
  .prose a {
    @apply text-cyan-400 hover:text-cyan-300;
  }
  .prose ul,
  .prose ol {
    @apply my-4;
  }
  .prose li {
    @apply my-2;
  }
  .prose p {
    @apply my-4;
  }
  .prose strong {
    @apply font-bold text-gray-100;
  }
  .prose em {
    @apply italic;
  }
</style>
